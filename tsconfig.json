{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "pretty": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "test/**/*.ts",
    "src/**/*.ts",
    "node_modules/lodash-es/**/*.js"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    ".idea"
  ]
}
